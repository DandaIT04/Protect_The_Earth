@model PFD_SaveTheEnvironment.Models.Users

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserID" class="form-control" type="hidden" readonly />
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="form-group col-md-4 col-sm-6">
                        <h6>Name:</h6>
                        <select asp-for="Salutation"
                                asp-items="@ViewData["SalutationList"]
                            as List<SelectListItem>"
                                class="form-control rounded-pill border-3 border-primary">
                        </select>
                    </div>
                    <div class="form-group col-md-8 col-sm-10">
                        <h6>‎</h6>
                        <input asp-for="UserName" class="form-control rounded-pill border-3 border-primary" placeholder="Enter Name" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <input asp-for="EmailAddr" class="form-control" type="hidden" readonly />
            <input asp-for="Password" class="form-control" type="hidden" readonly />
            <input asp-for="Score" class="form-control" type="hidden" readonly />
            <input asp-for="Badges" class="form-control" type="hidden" readonly />
            <input asp-for="DateCreated" class="form-control" type="hidden" readonly />
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">Back</a>
</div>

