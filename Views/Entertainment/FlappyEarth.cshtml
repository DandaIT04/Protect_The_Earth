@{
    ViewData["Title"] = "FlappyEarth!";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        canvas {
            padding-left: 0;
            padding-right: 0;
            margin-left: auto;
            margin-right: auto;
            border: 1px solid #d3d3d3;
            display: block;
            background-color: #d3d3d3;
        }

        .container {
            height: 200px;
            position: relative;
        }

        .center {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            text-align:center;
        }

        .theButton {
            margin-top: 55px;
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 26px;
        }

        @@media screen and (max-width: 1200px) {
            .theButton {
                margin-top: 75px;
            }
        }

        @@media screen and (max-width: 1000px) {
            .theButton {
                margin-top: 95px;
            }
        }

        @@media screen and (max-width: 990px) {
            .theButton {
                margin-top: 159px;
            }
        }

        @@media screen and (max-width: 540px) {
            .theButton {
                margin-top: 190px;
            }
        }

        @@media screen and (max-width: 519px) {
            .theButton {
                margin-top: 240px;
            }
        }

        @@media screen and (max-width: 429px) {
            .theButton {
                margin-top: 290px;
            }
        }

        @@media screen and (max-width: 385px) {
            .theButton {
                margin-top: 345px;
            }
        }

    </style>
</head>
<body onload="startGame()">
    <br>
    <div class="container ">
        <div class="center">
            <script src="~/js/wasdGame.js" type="text/javascript"></script>
            <button class="theButton" onmousedown="accelerate(-0.2)" onmouseup="accelerate(0.05)">Gravitate</button>
            <p>The earth is under attack by non-environmental friendly companies!</p>
            <p>Click Gravitate to avoid annihilation!</p>
            <br />
            <p>Earth logo by <a href="https://www.flaticon.com/authors/freepik" target="_blank">Visit freepik!</a> </p>
            <div> Nestle icon made by <a href="https://www.freepik.com" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>
            <div> Coca Cola Icon made by <a href="https://www.flaticon.com/authors/smalllikeart" title="smalllikeart">smalllikeart</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>
            <div> Pepsi Icon made by <a href="https://www.freepik.com" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>
        </div>
    </div>
</body>

</html>